#!/usr/bin/env bash

# this file contains the default settings
# scaling parameters are applied after loading defaults

# GLOBAL REPLACEMENTS
DOLLAR='$'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_KAFKA_ENVIRONMENT'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_KAFKA_ENVIRONMENT="\
'KAFKA_HEAP_OPTS=-Xmx256m -Xms256m',\
'KAFKA_BROKER_ID=1',\
'KAFKA_ZOOKEEPER_CONNECT=${DOLLAR}{CONTECO_DC_KAFKA_KAFKA_ZOOKEEPER_CONNECT}',\
'KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT',\
'KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT',\
'KAFKA_ADVERTISED_LISTENERS=${DOLLAR}{CONTECO_DC_KAFKA_KAFKA_ADVERTISED_LISTENERS}',\
'KAFKA_AUTO_CREATE_TOPICS_ENABLE=true',\
'KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1',\
'KAFKA_LOG_RETENTION_HOURS=1',\
'KAFKA_METRIC_REPORTERS=io.confluent.metrics.reporter.ConfluentMetricsReporter',\
'KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1',\
'CONFLUENT_METRICS_REPORTER_BOOTSTRAP_SERVERS=${DOLLAR}{CONTECO_DC_KAFKA_CONFLUENT_METRICS_REPORTER_BOOTSTRAP_SERVERS}',\
'CONFLUENT_METRICS_ENABLE=true',\
'CONFLUENT_SUPPORT_CUSTOMER_ID=anonymous'"

# START VARIABLES grafana.base
export CONTECO_DC_KAFKA_KAFKA_ZOOKEEPER_CONNECT="zookeeper:2181"
export CONTECO_DC_KAFKA_KAFKA_INTER_BROKER_LISTENER_NAME="PLAINTEXT:PLAINTEXT"
export CONTECO_DC_KAFKA_KAFKA_ADVERTISED_LISTENERS="PLAINTEXT://${CONTECO_TYPE}:9092"
export CONTECO_DC_KAFKA_CONFLUENT_METRICS_REPORTER_BOOTSTRAP_SERVERS="${CONTECO_TYPE}:9092"
export CONTECO_DC_KAFKA_COMMAND=
export CONTECO_DC_KAFKA_VOLUMES=
export CONTECO_DC_KAFKA_PORTS="9092:9092"
export CONTECO_DC_KAFKA_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_KAFKA_DEPLOY=
# END VARIABLES grafana.base
