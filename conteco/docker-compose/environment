#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="kafka_connect.base"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_kafka_connect"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_kafka_connect"
export CONTECO_DC_GLOBAL_RUNSTACKS=""
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_kafka_connect_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_KAFKA_CONNECT_ENVIRONMENT,$CONTECO_DC_KAFKA_CONNECT_COMMAND,$CONTECO_DC_KAFKA_CONNECT_VOLUMES,$CONTECO_DC_KAFKA_CONNECT_NETWORKS,$CONTECO_DC_KAFKA_CONNECT_DEPLOY_LABELS,$CONTECO_DC_KAFKA_CONNECT_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS_datagen
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_KAFKA_CONNECT_ENVIRONMENT="\
'CONNECT_BOOTSTRAP_SERVERS=kafka:9092', \
'CONNECT_REST_PORT=28083', \
'CONNECT_GROUP_ID=${DOLLAR}{CONTECO_TYPE}', \
'CONNECT_CONFIG_STORAGE_TOPIC=\"${DOLLAR}{CONTECO_STACKPREFIX}-config\"', \
'CONNECT_OFFSET_STORAGE_TOPIC=\"${DOLLAR}{CONTECO_STACKPREFIX}-offsets\"', \
'CONNECT_STATUS_STORAGE_TOPIC=\"${DOLLAR}{CONTECO_STACKPREFIX}-status\"', \
'CONNECT_CONFIG_STORAGE_REPLICATION_FACTOR=1', \
'CONNECT_OFFSET_STORAGE_REPLICATION_FACTOR=1', \
'CONNECT_STATUS_STORAGE_REPLICATION_FACTOR=1', \
'CONNECT_KEY_CONVERTER=\"io.confluent.connect.avro.AvroConverter\"', \
'CONNECT_VALUE_CONVERTER=\"io.confluent.connect.avro.AvroConverter\"', \
'CONNECT_KEY_CONVERTER_SCHEMA_REGISTRY_URL=\"http://kafka_connect:8081\"', \
'CONNECT_VALUE_CONVERTER_SCHEMA_REGISTRY_URL=\"http://kafka_connect:8081\"', \
'CONNECT_INTERNAL_KEY_CONVERTER=\"org.apache.kafka.connect.json.JsonConverter\"', \
'CONNECT_INTERNAL_VALUE_CONVERTER=\"org.apache.kafka.connect.json.JsonConverter\"', \
'CONNECT_REST_ADVERTISED_HOST_NAME=\"kafka_connect\"', \
'CONNECT_LOG4J_ROOT_LOGLEVEL=DEBUG'"
export CONTECO_DC_KAFKA_CONNECT_COMMAND=
export CONTECO_DC_KAFKA_CONNECT_VOLUMES="'${DOLLAR}{CONTECO_STACKPREFIX}_kafka_connect_volume:/var/lib/kafka/data'"
export CONTECO_DC_KAFKA_CONNECT_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_KAFKA_CONNECT_DEPLOY_LABELS=
export CONTECO_DC_KAFKA_CONNECT_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_kafka_connect_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS kafka_connect.base
export CONTECO_DC_KAFKA_CONNECT_PORTS="29092:29092"
export CONTECO_DC_KAFKA_CONNECT_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_KAFKA_CONNECT_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_KAFKA_CONNECT_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_KAFKA_CONNECT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kafka_connect.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
