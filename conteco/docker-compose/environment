#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='kafka.base'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_KAFKA_ENVIRONMENT,$CONTECO_DC_KAFKA_COMMAND,$CONTECO_DC_KAFKA_VOLUMES,$CONTECO_DC_KAFKA_DEPLOY_MODE,$CONTECO_DC_KAFKA_DEPLOY_REPLICAS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_KAFKA_ENVIRONMENT="\
'KAFKA_HEAP_OPTS=-Xmx${DOLLAR}{CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY} -Xms${DOLLAR}{CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY}',\
'KAFKA_BROKER_ID=1',\
'KAFKA_ZOOKEEPER_CONNECT=${DOLLAR}{CONTECO_DC_KAFKA_KAFKA_ZOOKEEPER_CONNECT}',\
'KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT',\
'KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT',\
'KAFKA_ADVERTISED_LISTENERS=${DOLLAR}{CONTECO_DC_KAFKA_KAFKA_ADVERTISED_LISTENERS}',\
'KAFKA_AUTO_CREATE_TOPICS_ENABLE=true',\
'KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1',\
'KAFKA_LOG_RETENTION_HOURS=1',\
'KAFKA_METRIC_REPORTERS=io.confluent.metrics.reporter.ConfluentMetricsReporter',\
'CONFLUENT_METRICS_REPORTER_BOOTSTRAP_SERVERS=${DOLLAR}{CONTECO_DC_KAFKA_CONFLUENT_METRICS_REPORTER_BOOTSTRAP_SERVERS}',\
'CONFLUENT_METRICS_ENABLE=true',\
'CONFLUENT_SUPPORT_CUSTOMER_ID=anonymous'"
export CONTECO_DC_KAFKA_COMMAND=
export CONTECO_DC_KAFKA_VOLUMES="'${DOLLAR}{CONTECO_DC_KAFKA_VOLUMES_NAME}:/var/lib/kafka/data'"
export CONTECO_DC_KAFKA_DEPLOY_MODE="replicated"
export CONTECO_DC_KAFKA_DEPLOY_REPLICAS="1"
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export CONTECO_DC_KAFKA_KAFKA_ZOOKEEPER_CONNECT="zookeeper:2181"
export CONTECO_DC_KAFKA_KAFKA_INTER_BROKER_LISTENER_NAME="PLAINTEXT:PLAINTEXT"
export CONTECO_DC_KAFKA_KAFKA_ADVERTISED_LISTENERS="PLAINTEXT://${CONTECO_TYPE}:9092"
export CONTECO_DC_KAFKA_CONFLUENT_METRICS_REPORTER_BOOTSTRAP_SERVERS="${CONTECO_TYPE}:9092"
export CONTECO_DC_KAFKA_VOLUMES_NAME="${CONTECO_ECOSYSTEM}_${CONTECO_TYPE}_volume"
export CONTECO_DC_KAFKA_PORTS="9092:9092"
export CONTECO_DC_KAFKA_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_KAFKA_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_KAFKA_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kafka.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_DC_KAFKA_VOLUMES_NAME}: {}"
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_DC_KAFKA_NETWORKS}: { external: true }"
# END TOPLEVEL SETTINGS